{
	"manifest_version": 2,
	"name": "Tugowar's Ashes of Creation Forum Mod",
	"short_name": "AOC Forum Mod",
	"version": "2.0.0",
	"description": "Make the AOC forums more pleasing - cohortgaming.com/aoc-forums",
    "web_accessible_resources": [
        "light-theme.css",
		"wider-theme.css",
		"nobg-theme.css",
		"options.html"
    ],
	"permissions": [
		"storage",
		"tabs",
		"*://forums.ashesofcreation.com/*"
	],
	"content_scripts": [{
		"js": [
			"onload.js",
			"options.js"
		],
		"matches": ["https://forums.ashesofcreation.com/*" ]
	}],
	"icons": { 
		"16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png" },
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}